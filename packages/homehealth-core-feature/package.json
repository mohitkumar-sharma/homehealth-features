{
  "name": "homehealth-core-feature",
  "version": "0.0.1",
  "description": "Core feature like authentications for HomeHealth App",
  "main": "dist/index.ts",
  "module": "src/index.ts",
  "directories": {
    "lib": "src"
  },
  "scripts": {
    "bootstrap":"lerna bootstrap --use-workspaces",
    "clean:dist": "rm -rf dist || true",
    "build":"babel src --out-dir dist --copy-files",
    "prepublish": "yarn run build",
    "test": "jest --clearCache && jest --coverage",
    "lintFix": "eslint --fix",
    "pretty": "prettier --semi true --print-width 100 --single-quote --write"
  },
  "author": "HomeHealth",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry":"https://npm.pkg.github.com"
  },
  "husky":{
    "hooks":{
      "pre-commit": "yarn typecheck && lint-staged",
      "pre-push": "yarn test",
      "preapre-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "dependencies": {},
  "peerDependencies": {
    "react": ">=16.13.1",
    "redux": ">=4.0.5",
    "redux-saga": ">=1.1.3",
    "@reduxjs/toolkit": ">=1.4.0",
    "axios": ">=0.21.1",
    "moment": ">=2.29.1"
  },
  "devDependencies": {},
  "lint-staged":{
    "*.{js,ts,tsx}":[
      "eslint ./src --fix-dry-run",
      "prettier --write"
    ]
  }
}
